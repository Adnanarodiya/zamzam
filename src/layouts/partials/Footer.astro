---
import Logo from "@/components/Logo.astro";
import Social from "@/components/Social.astro";
import config from "@/config/config.json";
import menu from "@/config/menu.json";
import social from "@/config/social.json";
import { markdownify } from "@/lib/utils/textConverter";

const { footerCompany }: { footerCompany: { name: string; url: string }[] } =
  menu;
const { footerOthers }: { footerOthers: { name: string; url: string }[] } =
  menu;
---

<footer class="bg-theme-light dark:bg-darkmode-theme-light">
  <div class="container">
    <div class="row py-10">
      <div class="mb-8 text-center lg:col-4 lg:mb-0 lg:text-left">
        <h1 class="text-2xl mb-2">Zamzam Tours & Travels</h1>
        <div class="flex flex-col gap-1 text-muted text-base">
          <a
            href="tel:9426880068"
            class="text-muted dark:text-gray-400 duration-150 ease-in-out hover:text-gray-700 hover:underline transition"
            >Call Or Whatsapp: <b>+91 9426880068</b></a
          >
          <a
            href="https://maps.app.goo.gl/nMTzYPyqXDjUjH6n7"
            class="text-muted dark:text-gray-400 duration-150 ease-in-out hover:text-gray-700 hover:underline transition"
            >Office Address: <b
              >F 4, First Floor, Firdaus tower, Adajan Patiya, Surat</b
            ></a
          >
        </div>
      </div>
      <div class="mb-8 text-center lg:col-2 lg:mb-0">
        <ul class="flex flex-col items-center lg:items-start">
          <h4 class="font-bold text-lg mb-3">Company</h4>
          {
            footerCompany.map((menu) => (
              <li class="mb-3 inline-block">
                <a href={menu.url}>{menu.name}</a>
              </li>
            ))
          }
        </ul>
      </div>
      <div class="mb-8 text-center lg:col-3 lg:mb-0 lg:mt-0 lg:text-right">
        <ul class="flex flex-col items-center lg:items-start">
          <h4 class="font-bold text-lg mb-3">Others</h4>
          {
            footerOthers.map((menu) => (
              <li class="mb-3 inline-block">
                <a href={menu.url}>{menu.name}</a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
  <div class="border-t border-border py-7 dark:border-darkmode-border">
    <div class="container text-center text-light dark:text-darkmode-light">
      <p set:html={markdownify(config.params.copyright)} />
    </div>
  </div>
</footer>
